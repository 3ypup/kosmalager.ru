          <div class="clearfix">
            <%if user_signed_in?%>
            <a class="btn btn-success float-left" href=<%=new_post_url%>>&larr; Новый пост </a>
            <%end%>
            
          </div>

    <div class="container">
      <div class="row">

        <div class="col-lg-10 col-md-10 mx-auto">
          <%@posts.each do |post|%>
          <div class="post-preview">

            <a href=<%=post_url(post)%>>

              <h2 class="post-title">
                <%=post.title%>
              </h2>
              
             <h4 class="text-left">
                <%=simple_format(post.content.first(300)+"...")%>
             </h4>
           
              <button type="button"  class="btn btn-outline-primary pull-right"> читать далее...</button>
            </a>
            <p class="post-meta pull-left">Написал
              <a href="#"><%=post.author%></a>
              <%=post.created_at%></p>
          </div>
          <hr/><br/>
          <%end%>
                 
          <!-- Pager -->

        </div>
      </div>
    </div>

